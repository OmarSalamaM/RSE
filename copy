      ixy="0"
      ixz="0"
      iyy="1e-6"
      iyz="0"
      izz="1e-6"/>
  </inertial>
</link>

<!-- Camera Joint -->
<joint name="camera_joint" type="fixed">
  <parent link="chassis"/>
